{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

{% block title %}S'inscrire - Share Review{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<section class="container mt-5 st">
    <div class="row justify-content-center">
        <div class="col-6 border border-dark bg-form py-2 rounded">
            <h1 class="h3 text-dark text-center">Inscrivez-vous</h1>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.nickname, {label: 'Pseudo'}) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
                <button type="submit" class="btn btn-dark">S'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</section>
    
{% endblock %}