{% extends 'base.html.twig' %}

{% block title %}Connection - ShareReview{% endblock %}

{% block body %}
<section class="container mt-5 st">
    <div class="row justify-content-center">
        <div class="col-6 border border-dark bg-form py-2 rounded">
            <h1 class="h3 text-dark text-center">Connectez-vous</h1>
            <form autocomplete="off" method="POST">
                {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.nickname }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
                {% endif %}

                <div class="form-group">
                    <label for="nickname">Votre pseudo</label>
                    <input name="nickname" type="text" class="form-control" id="nickname" aria-describedby="nickname" placeholder="xX-DarkNinja-Xx" required="">
                </div>
                <div class=" form-group">
                    <label for="password">Votre mot de passe</label>
                    <input name="password" type="password" class="form-control" id="password" aria-describedby="password" required="">
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="btn btn-dark">Se connecter</button>
            </form>
        </div>
    </div>
</section>
{% endblock %}
